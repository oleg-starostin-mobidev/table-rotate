{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": [
        "es6",
        "es2015",
        "dom"
      ],
      "declaration": true,
      "outDir": "build",
      "rootDir": "src",
      "strict": true,
      "types": ["node"],
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
